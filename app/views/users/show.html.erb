<%= render 'shared/navbar' %>

<main role="main">

  <section class="jumbotron text-center">
    <div class="container">
      <h1 class="display-3">Patient's profile</h1>
      <h2>Dear <%= @user.full_name %>!</h2>
      <p class="lead ">Here you can choose a specialist, appoint a meeting with him and get his recommendations</p>
      <p>
        <%= link_to('Back', root_path, class: 'btn btn-secondary my-2') %>
        <%= link_to('Appointments', appointments_path, class: 'btn btn-primary' ) %>
      </p>
    </div>
  </section>



  <div class="album pt-4 bg-light">
    <div class="container">
      <h2 class="text-center mb-4">Select your doctor</h2>
      <div class="row">

        <% @doctors.each do |doctor| %>
        <div class="col-md-4">
          <div class="card mb-4 box-shadow">
            <% if doctor.main_image? %>
              <%= image_tag doctor.main_image.url, height: 200, width: 400, class: 'login-img' %>
            <% else %>
              <%= image_tag "user-empty.png", height: 200, class: 'login-img' %>
            <% end %>
            <div class="card-body">
              <p class="card-text"><strong>Doctor:</strong> <%= doctor.full_name %></p>
              <p class="card-text"><strong>Category:</strong> <%= doctor.category&.name %></p>

              <p class="card-text"> <strong>Appointments:</strong> <%= doctor.appointments&.count %></p>
              <p>
                <%= link_to('Arrange an appointment', new_appointment_path(doctor_id: doctor.id), class: 'btn btn-primary') %>
              </p>

                <small class="font-italic text-grey"><%= distance_of_time_in_words(doctor.created_at, Time.now) %> ago</small>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>

</main>
