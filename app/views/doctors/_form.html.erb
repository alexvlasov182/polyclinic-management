<%= simple_nested_form_for @doctor do |f| %>
  <%= f.input :first_name, :required => false %>
  <%= f.input :last_name, :required => false %>
  <%= f.input :city, :required => false %>
  <%= f.input :address, :required => false %>
  <%= f.input :primary_practice, :required => false %>
  <%= f.input :secondary_practice, :required => false %>
  <%= f.input :password, :required => false %>
  <h3 class="mt-3">Add another patients<span class="subtitle-patient">(medical staff)</span></h3>
  <%= f.fields_for :patients do |t| %>
    <%= t.input :first_name, :required => false %>
    <%= t.input :last_name, :required => false %>
    <%= t.input :city, :required => false %>
    <%= t.input :address, :required => false %>
    <%= t.input :email, :required => false %>
    <%= t.input :password, :required => false %>
    <%= t.link_to_remove "Remove this patient" %>
  <% end %>
  <p><%= f.link_to_add "+ Add a Patints", :patients %></p>
  <%= f.button :submit, class: 'btn btn-primary mt-4' %>
<% end %>