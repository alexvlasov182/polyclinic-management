<%= simple_nested_form_for @doctor do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :city %>
  <%= f.input :address %>
  <%= f.input :primary_practice %>
  <%= f.input :secondary_practice %>
  <%= f.input :password %>
  <h3 class="mt-3">Add another patients<span class="subtitle-patient">(medical staff)</span></h3>
  <%= f.fields_for :patients do |t| %>
    <%= t.input :first_name %>
    <%= t.input :last_name %>
    <%= t.input :city %>
    <%= t.input :address %>
    <%= t.input :email %>
    <%= t.input :password %>
    <%= t.link_to_remove "Remove this patient" %>
  <% end %>
  <p><%= f.link_to_add "Add a Patints", :patients %></p>
  <%= f.button :submit, class: 'btn btn-primary mt-4' %>
<% end %>