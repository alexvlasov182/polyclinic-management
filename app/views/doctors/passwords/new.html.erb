<div class="background-form">
  <div class="form-signin">
    <%= image_tag "biplane.svg", height: 100, class: 'centered-image' %>
    <h2 class="h3 mb-3 font-weight-normal text-center">Forgot your password?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, placeholder: 'Email address' %>

      <div class="form-actions">
        <%= f.button :submit, "Send me reset password instructions", class: 'btn btn-primary mt-3' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    <%=	 link_to 'Go back', root_path %>
  </div>
</div>