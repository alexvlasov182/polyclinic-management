    <tr>
      <td>
        <%= doctor.id %>
      </td>
      <td>
        <%= doctor.first_name %>
      </td>
      <td>
        <%= doctor.last_name %>
      </td>
      <td>
        <%= doctor.patients[0]&.first_name%>
        <%= doctor.patients[1]&.first_name%>
        <%= doctor.patients[2]&.first_name%>
        <%= doctor.patients[3]&.first_name%>
      </td>
      <td>
        <%#= doctor.user&.email %>
      </td>
      <td>
        <%= doctor.city %>
      </td>
      <td>
        <%= doctor.primary_practice %>
      </td>
      <td>
        <%= link_to('Show', doctor_path(doctor), class: 'btn btn-primary') %>
        <%# if user_signed_in? && policy(word).edit? && policy(word).destroy? %>
        <%= link_to('Edit', edit_doctor_path(doctor), class: 'btn btn-warning') %>
        <%= link_to('Delete', doctor_path(doctor), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure you want to delete this post'},) %>
        <%# end %>
      </td>

    </tr>
  <% end %>
  </tbody>
</table>
