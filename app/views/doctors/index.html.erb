<h1 class="mt-4">Doctors<span class="subtitle-patient">(medical staff)</span></h1>

<table class="table">
  <thead>
  <tr>
    <th>
      ID
    </th>
    <th>
      Name
    </th>
    <th>
      Lastname
    </th>
    <th>
      Actions
    </th>
  </tr>
  </thead>
  <tbody>
  <% @doctors.each do |doctor| %>
    <tr>
      <td>
        <%= doctor.id %>
      </td>
      <td>
        <%= doctor.first_name %>
      </td>
      <td>
        <%= doctor.last_name %>
      </td>
      <td>
        <%= link_to('Show', doctors_path(doctor), class: 'btn btn-primary') %>
        <%# if user_signed_in? && policy(word).edit? && policy(word).destroy? %>
        <%= link_to('Edit', doctor_path(doctor), class: 'btn btn-warning') %>
        <%= link_to('Delete', doctor_path(doctor), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure you want to delete this post'},) %>
        <%# end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>