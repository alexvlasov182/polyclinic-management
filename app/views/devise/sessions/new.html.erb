    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: false,
                    input_html: { autocomplete: "Email address" }, class: 'sr-only', placeholder: 'Email address' %>
        <%= f.input :password,
                    required: false,
                    label: false,
                    input_html: { autocomplete: "current-password" }, class: 'sr-only', placeholder: 'Password' %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: 'btn bnt-lg btn-primary btn-block' %>
      </div>
    <% end %>
