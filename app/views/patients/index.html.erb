<h1 class="mt-4">Patients<span class="subtitle-patient">(user)</span></h1>

<table class="table">
  <thead>
  <tr>
    <th>
      ID
    </th>
    <th>
      Name
    </th>
    <th>
      Lastname
    </th>
    <th>
      Patients
    </th>
    <th>
      Actions
    </th>

  </tr>
  </thead>
  <tbody>
  <% @patients.each do |patient| %>
    <tr>
      <td>
        <%= patient.id %>
      </td>
      <td>
        <%= patient.first_name %>
      </td>
      <td>
        <%= patient.last_name %>
      </td>
      <td>

      </td>
      <td>
        <%= link_to('Show', patient_path(patient), class: 'btn btn-primary') %>
        <%# if user_signed_in? && policy(word).edit? && policy(word).destroy? %>
        <%= link_to('Edit', edit_patient_path(patient), class: 'btn btn-warning') %>
        <%= link_to('Delete', patient_path(patient), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure you want to delete this post'},) %>
        <%# end %>
      </td>

    </tr>
  <% end %>
  </tbody>
</table>

<% @patients.each do |patient| %>
  <h3>Doctor: <%= patient.first_name %> <%= patient.last_name %></h3>
  <p>City: <%= patient.city %></p>
<% end %>

