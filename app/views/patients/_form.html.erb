<%= simple_nested_form_for @patient do  |f| %>
  <%= f.input :first_name, :required => false %>
  <%= f.input :last_name, :required => false %>
  <%= f.input :city, :required => false %>
  <%= f.input :address, :required => false %>
  <%= f.input :email, :required => false %>
  <%= f.input :password, :required => false %>
  <h3 class="mt-3">Add another Doctor<span class="subtitle-patient">(medical staff)</span></h3>
  <%= f.fields_for :doctors do |t| %>
    <%= t.input :first_name, :required => false %>
    <%= t.input :last_name, :required => false %>
    <%= t.input :city, :required => false %>
    <%= t.input :address, :required => false %>
    <%= t.input :primary_practice, :required => false %>
    <%= t.input :secondary_practice, :required => false %>
    <%= t.input :password, :required => false %>

    <%= t.link_to_remove "Remove this doctor" %>
  <% end %>
  <p><%= f.link_to_add "+ Add a Doctor", :doctors %></p>
  <%= f.button :submit, class: 'btn btn-primary mt-2' %>
<% end %>