<%= simple_nested_form_for @patient do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :city %>
  <%= f.input :address %>
  <%= f.input :email %>
  <%= f.input :password %>
  <h3 class="mt-3">Add another Doctor<span class="subtitle-patient">(medical staff)</span></h3>
  <%= f.fields_for :doctors do |t| %>
    <%= t.input :first_name %>
    <%= t.input :last_name %>
    <%= t.input :city %>
    <%= t.input :address %>
    <%= t.input :primary_practice %>
    <%= t.input :secondary_practice %>
    <%= t.input :password %>

    <%= t.link_to_remove "Remove this doctor" %>
  <% end %>
  <p><%= f.link_to_add "Add a Doctor", :doctors %></p>
  <%= f.button :submit, class: 'btn btn-primary mt-4' %>
<% end %>